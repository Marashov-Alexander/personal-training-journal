<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.cardview.widget.CardView
        android:id="@+id/w_ex_image"
        android:layout_width="@dimen/padding_150"
        android:layout_height="@dimen/padding_150"
        app:cardCornerRadius="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:cardPreventCornerOverlap="false"
        android:padding="1dp"
        >
        <ImageView
            android:id="@+id/tr_ex_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/header_nav_menu"
            android:adjustViewBounds="true"
            android:clickable="true"
            android:padding="1dp"
            android:scaleType="centerCrop"
            android:focusable="true" />
        <TextView
            android:id="@+id/tr_ex_name"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:textAlignment="center"
            tools:text="Название"
            android:textSize="@dimen/text_size_20"
            android:textColor="@color/white"
            app:layout_constraintStart_toStartOf="@id/w_ex_image"
            app:layout_constraintTop_toTopOf="@id/w_ex_image"
            android:layout_marginEnd="@dimen/dimens_8dp"
            />
        <TextView
            android:id="@+id/tr_ex_category"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            tools:text="Категория"
            android:textSize="@dimen/text_size_17"
            android:textStyle="italic"
            android:paddingVertical="2dp"
            android:paddingHorizontal="8dp"
            />

        <ImageView
            android:id="@+id/workout_duration_icon"
            android:layout_width="@dimen/dimens_24dp"
            android:layout_height="@dimen/dimens_24dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="@id/workout_duration"
            app:layout_constraintTop_toTopOf="@id/workout_duration"
            app:layout_constraintEnd_toStartOf="@id/workout_duration"
            android:src="@drawable/ic_alarm_black_24dp"
            android:contentDescription="@string/workout_duration"
            />
        <TextView
            android:id="@+id/workout_duration"
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            tools:text="40 минут"
            android:textSize="@dimen/text_size_15"
            app:layout_constraintStart_toEndOf="@id/workout_duration_icon"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginStart="@dimen/dimens_8dp"
            android:textColor="@color/black"
            />
    </androidx.cardview.widget.CardView>



</androidx.constraintlayout.widget.ConstraintLayout>