<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="@dimen/dimens_16dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/load_media"
        app:layout_constraintTop_toTopOf="parent"
        android:textSize="@dimen/text_size_18"
        android:textColor="@color/black"
        android:textAlignment="center"
        />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/exercise_image_switcher"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/muscle_groups_label"
        android:layout_marginTop="@dimen/dimens_4dp"
        android:layout_marginBottom="@dimen/dimens_16dp"
        android:padding="@dimen/dimens_8dp"
        android:background="@drawable/rounded_outline"
    />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/edit_content_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:fabSize="mini"
        android:layout_margin="@dimen/dimens_8dp"
        app:srcCompat="@drawable/ic_add_black_24dp"
        android:tint="@color/black"
        app:backgroundTint="@color/white"
        android:clickable="true"
        app:layout_constraintBottom_toBottomOf="@id/exercise_image_switcher"
        app:layout_constraintEnd_toEndOf="@id/exercise_image_switcher"
        android:contentDescription="@string/edit_content_button" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/remove_content_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:fabSize="mini"
        android:layout_margin="@dimen/dimens_8dp"
        app:srcCompat="@drawable/ic_delete_black_24dp"
        android:tint="@color/black"
        app:backgroundTint="@color/white"
        android:clickable="true"
        app:layout_constraintTop_toTopOf="@id/exercise_image_switcher"
        app:layout_constraintEnd_toEndOf="@id/exercise_image_switcher"
        android:contentDescription="@string/edit_content_button" />

    <TextView
        android:id="@+id/muscle_groups_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:text="@string/muscle_groups"
        app:layout_constraintBottom_toTopOf="@id/muscle_groups_value"
        android:textColor="@color/black"
        android:textSize="@dimen/text_size_20"
        android:drawableEnd="@drawable/ic_edit_element"
        />

    <TextView
        android:id="@+id/muscle_groups_value"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@id/exercise_description"
        android:textStyle="italic"
        android:textAlignment="center"
        android:paddingHorizontal="@dimen/dimens_8dp"
        android:layout_marginBottom="@dimen/dimens_16dp"
        tools:text="Трицепсы, бицепсы и ещё 6..."
        />

    <EditText
        android:id="@+id/exercise_description"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="@drawable/rounded_outline"
        android:layout_margin="16dp"
        android:padding="8dp"
        android:hint="@string/description"
        android:gravity="start"
        android:textSize="@dimen/text_size_20"
        app:layout_constraintBottom_toTopOf="@id/next_step_card"
        android:inputType="text|textMultiLine"
        android:importantForAutofill="no" />

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/prev_step_card"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:strokeColor="@color/gray_4"
        app:strokeWidth="1dp"
        app:cardCornerRadius="@dimen/dimens_16dp"
        android:theme="@style/AppTheme"
        android:clickable="true"
        >

        <TextView
            android:id="@+id/prev_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/prev"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_25"
            android:drawableStart="@drawable/ic_chevron_left"
            android:layout_marginHorizontal="@dimen/dimens_16dp"
            android:layout_marginVertical="@dimen/dimens_4dp"
            />

    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/next_step_card"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:strokeColor="@color/gray_4"
        app:strokeWidth="1dp"
        app:cardCornerRadius="@dimen/dimens_16dp"
        android:theme="@style/AppTheme"
        android:clickable="true"
        >

        <TextView
            android:id="@+id/next_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/next"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_25"
            android:drawableEnd="@drawable/ic_chevron_right"
            android:layout_marginHorizontal="@dimen/dimens_16dp"
            android:layout_marginVertical="@dimen/dimens_4dp"
            />

    </com.google.android.material.card.MaterialCardView>

</androidx.constraintlayout.widget.ConstraintLayout>