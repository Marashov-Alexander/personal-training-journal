<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="@dimen/dimens_16dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <include
        android:id="@+id/image_include"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/category_text_view"
        layout="@layout/item_media_loader"
        app:layout_constraintVertical_weight="70"
        />

    <TextView
        android:id="@+id/category_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/image_include"
        app:layout_constraintBottom_toTopOf="@id/workout_type_spinner"
        app:layout_constraintStart_toStartOf="@id/workout_type_spinner"
        android:text="@string/category"
        android:textSize="@dimen/text_size_18"
        android:textColor="@color/black"
        />

    <Spinner
        android:id="@+id/workout_type_spinner"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:entries="@array/workout_types"
        app:layout_constraintTop_toBottomOf="@id/category_text_view"
        app:layout_constraintBottom_toTopOf="@id/difficult_card_view"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/sport_type_spinner"
        android:layout_marginBottom="@dimen/dimens_8dp"
        android:background="@drawable/rounded_outline"
        android:layout_marginEnd="8dp"
        android:textAlignment="center"
        />

    <TextView
        android:id="@+id/sport_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/category_text_view"
        app:layout_constraintBottom_toBottomOf="@id/category_text_view"
        app:layout_constraintStart_toStartOf="@id/sport_type_spinner"
        android:text="@string/kind_of_sport"
        android:textSize="@dimen/text_size_18"
        android:textColor="@color/black"
        />

    <Spinner
        android:id="@+id/sport_type_spinner"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:entries="@array/sport_types"
        app:layout_constraintTop_toTopOf="@id/workout_type_spinner"
        app:layout_constraintBottom_toBottomOf="@id/workout_type_spinner"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/workout_type_spinner"
        android:background="@drawable/rounded_outline"
        android:textAlignment="center"
        />

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/difficult_card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/workout_type_spinner"
        app:layout_constraintBottom_toTopOf="@id/workout_description"
        android:layout_marginVertical="@dimen/dimens_8dp"
        app:strokeWidth="1dp"
        app:strokeColor="@color/gray_4"
        app:cardBackgroundColor="@color/background"
        app:cardCornerRadius="@dimen/dimens_32dp"
        app:cardElevation="0dp"
        android:theme="@style/AppTheme"
        >
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingHorizontal="@dimen/dimens_8dp"
            android:paddingVertical="4dp"
            >
            <TextView
                android:id="@+id/difficulty_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/difficulty"
                android:textSize="@dimen/text_size_20"
                android:textColor="@color/black"
                android:layout_gravity="center"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/decrease_difficulty"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                />
            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/decrease_difficulty"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:fabSize="mini"
                app:srcCompat="@drawable/ic_baseline_remove_24"
                app:layout_constraintStart_toEndOf="@id/difficulty_text"
                app:layout_constraintEnd_toStartOf="@id/difficulty_value"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:contentDescription="@string/increase_difficulty_button" />
            <TextView
                android:id="@+id/difficulty_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/_1"
                android:textSize="@dimen/text_size_20"
                android:layout_gravity="center"
                app:layout_constraintStart_toEndOf="@id/decrease_difficulty"
                app:layout_constraintEnd_toStartOf="@id/increase_difficulty"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                />
            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/increase_difficulty"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:fabSize="mini"
                android:src="@drawable/ic_add_black_24dp"
                app:layout_constraintStart_toEndOf="@id/difficulty_value"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:contentDescription="@string/decrease_difficulty_button" />
            
        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>

    <EditText
        android:id="@+id/workout_description"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@drawable/rounded_outline"
        android:layout_margin="16dp"
        android:padding="8dp"
        android:hint="@string/description"
        android:gravity="start"
        android:textSize="@dimen/text_size_20"
        app:layout_constraintTop_toBottomOf="@id/difficult_card_view"
        app:layout_constraintBottom_toTopOf="@id/next_step_card"
        android:inputType="text|textMultiLine"
        app:layout_constraintVertical_weight="30"
        android:importantForAutofill="no" />

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/prev_step_card"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:strokeColor="@color/gray_4"
        app:strokeWidth="1dp"
        app:cardCornerRadius="@dimen/dimens_16dp"
        android:theme="@style/AppTheme"
        android:clickable="true"
        >

        <TextView
            android:id="@+id/prev_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/prev"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_25"
            android:drawableStart="@drawable/ic_chevron_left"
            android:layout_marginHorizontal="@dimen/dimens_16dp"
            android:layout_marginVertical="@dimen/dimens_4dp"
            />

    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/next_step_card"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:strokeColor="@color/gray_4"
        app:strokeWidth="1dp"
        app:cardCornerRadius="@dimen/dimens_16dp"
        android:theme="@style/AppTheme"
        android:clickable="true"
        >

        <TextView
            android:id="@+id/next_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/next"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_25"
            android:drawableEnd="@drawable/ic_chevron_right"
            android:layout_marginHorizontal="@dimen/dimens_16dp"
            android:layout_marginVertical="@dimen/dimens_4dp"
            />

    </com.google.android.material.card.MaterialCardView>

</androidx.constraintlayout.widget.ConstraintLayout>