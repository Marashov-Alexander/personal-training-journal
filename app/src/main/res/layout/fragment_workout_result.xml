<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ru.ok.technopolis.training.personal.views.ProgressChartView
        android:id="@+id/progress_chart"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="@dimen/dimens_8dp"
        android:padding="@dimen/dimens_16dp"
        app:badColor="@color/red_transparent"
        app:goalLineColor="@color/blackbird_edge"
        app:goodColor="@color/green_progress"
        app:itemColor="@color/gray_5"
        app:itemWidth="35dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/motivation_text"
        app:startLineColor="@color/shadow_start_light" />

    <TextView
        android:id="@+id/motivation_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/progress_chart"
        app:layout_constraintBottom_toTopOf="@id/more_card"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textStyle="italic"
        android:layout_margin="@dimen/dimens_16dp"
        android:textSize="@dimen/text_size_18"
        android:text="@string/motivation"
        />

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/more_card"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/motivation_text"
        app:layout_constraintBottom_toTopOf="@id/configure_card"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:strokeColor="@color/gray_2_1"
        app:strokeWidth="1dp"
        app:cardCornerRadius="@dimen/dimens_16dp"
        android:theme="@style/AppTheme"
        android:background="@color/background"
        android:clickable="true"
        android:layout_margin="@dimen/dimens_16dp"
        app:layout_constraintHorizontal_weight="@integer/integer_1"
        >

        <TextView
            android:id="@+id/more_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/more"
            android:textColor="@color/black"
            android:textAlignment="center"
            android:textSize="@dimen/text_size_20"
            android:layout_marginHorizontal="@dimen/dimens_16dp"
            android:layout_marginVertical="@dimen/dimens_4dp"
            android:drawableEnd="@drawable/ic_baseline_bar_chart_24"
            />

    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/configure_card"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/more_card"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/send_results_card"
        app:layout_constraintBottom_toBottomOf="parent"
        app:strokeColor="@color/gray_2_1"
        app:strokeWidth="1dp"
        app:cardCornerRadius="@dimen/dimens_16dp"
        android:theme="@style/AppTheme"
        app:cardBackgroundColor="@color/background"
        android:clickable="true"
        android:layout_margin="@dimen/dimens_16dp"
        app:layout_constraintHorizontal_weight="@integer/integer_1"
        >

        <TextView
            android:id="@+id/configure_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/change_difficulty"
            android:textColor="@color/black"
            android:textAlignment="center"
            android:textSize="@dimen/text_size_18"
            android:layout_marginHorizontal="@dimen/dimens_16dp"
            android:layout_marginVertical="@dimen/dimens_4dp"
            android:drawableTop="@drawable/ic_settings_applications_black_24dp"
            />

    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/send_results_card"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/configure_card"
        app:layout_constraintBottom_toBottomOf="@id/configure_card"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/configure_card"
        app:strokeColor="@color/gray_2_1"
        app:strokeWidth="1dp"
        app:cardCornerRadius="@dimen/dimens_16dp"
        android:theme="@style/AppTheme"
        app:cardBackgroundColor="@color/background"
        android:clickable="true"
        android:layout_margin="@dimen/dimens_16dp"
        app:layout_constraintHorizontal_weight="@integer/integer_1"
        >

        <TextView
            android:id="@+id/send_results_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/send_results"
            android:textColor="@color/black"
            android:textAlignment="center"
            android:textSize="@dimen/text_size_18"
            android:layout_marginHorizontal="@dimen/dimens_16dp"
            android:layout_marginVertical="@dimen/dimens_4dp"
            android:drawableTop="@drawable/ic_outline_chat_bubble_outline_24"
            />

    </com.google.android.material.card.MaterialCardView>

</androidx.constraintlayout.widget.ConstraintLayout>