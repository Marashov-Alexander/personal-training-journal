<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/padding_16"
    android:layout_marginHorizontal="@dimen/padding_10"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">


    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/chat_icon"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/ic_exercise_category_bg"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:contentDescription="@string/author_image"
        />
    <TextView
        android:id="@+id/chat_name"
        android:paddingHorizontal="@dimen/padding_10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/chat_icon"
        app:layout_constraintTop_toTopOf="@id/chat_icon"
        app:layout_constraintEnd_toStartOf="@id/last_message_time"
        android:textAlignment="viewStart"
        tools:text="Название чата"
        android:textSize="@dimen/text_size_20"
        />

    <TextView
        android:id="@+id/chat_info"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/padding_16"
        app:layout_constraintStart_toEndOf="@id/chat_icon"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/chat_name"
        app:layout_constraintEnd_toStartOf="@id/unread_messages_number"
        android:textAlignment="viewStart"
        android:textColor="@color/gray_4"
        tools:text="Info"
        android:textSize="@dimen/text_size_17"
        />

    <TextView
        android:id="@+id/last_message_time"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/padding_16"
        android:textAlignment="viewEnd"
        android:textColor="@color/gray_4"
        android:textSize="@dimen/text_size_17"
        android:layout_marginEnd="@dimen/padding_5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/chat_name"
        app:layout_constraintTop_toTopOf="@id/chat_icon"
        tools:text="12:34" />

    <TextView
        android:id="@+id/unread_messages_number"
        android:layout_width="30dp"
        android:layout_height="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:gravity="center"
        android:textColor="@color/white"
        android:background="@drawable/unread_message_background"
        android:text="6"
        android:textSize="@dimen/text_size_15"
        android:layout_marginEnd="@dimen/padding_5"
        android:layout_marginVertical="5dp"
        />
    <View
        android:id="@+id/chat_separator"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="@color/gray_4"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="parent"
        android:elevation="0dp"
        android:layout_marginTop="4dp"
        />



</androidx.constraintlayout.widget.ConstraintLayout>