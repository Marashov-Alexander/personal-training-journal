<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="@dimen/dimens_8dp"
    xmlns:tools="http://schemas.android.com/tools"
    >

    <include
        android:id="@+id/profile"
        layout="@layout/item_profile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/user_social_info"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        app:layout_constraintTop_toBottomOf="@id/profile"
        app:layout_constraintBottom_toTopOf="@id/switcher"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/subscribers_number"
            android:layout_width="@dimen/padding_40"
            android:layout_height="@dimen/padding_40"
            android:layout_margin="@dimen/dimens_8dp"
            android:background="@drawable/day_highlited_circle"
            android:elevation="8dp"
            android:fontFamily="sans-serif-thin"
            android:gravity="center"
            android:textColor="@color/black"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toStartOf="@id/subscriptions_number"
            tools:text="1" />

        <TextView
            android:id="@+id/subscriptions_number"
            android:layout_width="@dimen/padding_40"
            android:layout_height="@dimen/padding_40"

            android:layout_margin="@dimen/dimens_8dp"

            android:background="@drawable/day_highlited_circle"
            android:elevation="8dp"
            android:fontFamily="sans-serif-thin"

            android:gravity="center"
            android:textColor="@color/black"
            android:textSize="20sp"
            app:layout_constraintLeft_toRightOf="@id/subscribers_number"
            app:layout_constraintStart_toEndOf="@id/subscribers_number"
            app:layout_constraintEnd_toStartOf="@id/send_author_message"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="2" />

        <androidx.cardview.widget.CardView
            android:id="@+id/send_author_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginEnd="@dimen/padding_20"
            app:cardCornerRadius="@dimen/padding_10"
            >
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                >
            <TextView
                android:id="@+id/send_message_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text = "@string/send_message_text"
                android:textSize="@dimen/padding_16"
                android:paddingHorizontal="@dimen/padding_5"
                android:paddingVertical="@dimen/padding_5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/send_author_message_icon"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                 />

            <ImageView
                android:id="@+id/send_author_message_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_baseline_send_24"
                app:layout_constraintStart_toEndOf="@+id/send_message_button"
                app:layout_constraintTop_toTopOf="@id/send_message_button"
                app:layout_constraintBottom_toBottomOf="@id/send_message_button"
                android:paddingHorizontal="@dimen/padding_5"
                />
            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.cardview.widget.CardView>


        <!---->
        <TextView
            android:id="@+id/subscribers_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dimens_4dp"
            android:text="@string/subscribers_text"
            android:fontFamily="sans-serif-thin"
            android:gravity="center"
            android:textColor="@color/black"
            android:textSize="10sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/subscribers_number"
            app:layout_constraintEnd_toStartOf="@id/subscriptions_text" />

        <TextView
            android:id="@+id/subscriptions_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dimens_4dp"
            android:text="@string/subscriptions_text"
            android:fontFamily="sans-serif-thin"
            android:gravity="center"
            android:textColor="@color/black"
            android:textSize="10sp"
            app:layout_constraintLeft_toRightOf="@id/subscribers_text"
            app:layout_constraintStart_toEndOf="@id/subscribers_text"
            app:layout_constraintEnd_toStartOf="@id/send_author_message"
            app:layout_constraintTop_toBottomOf="@id/subscriptions_number"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <include
        android:id="@+id/switcher"
        layout="@layout/item_train_ex_switcher"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/user_social_info"

        />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/author_tr_ex_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/padding_10"
        app:layout_constraintTop_toBottomOf="@id/switcher"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:orientation="horizontal"
        />

</androidx.constraintlayout.widget.ConstraintLayout>