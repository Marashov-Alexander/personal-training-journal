<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="@dimen/dimens_16dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/exercise_progress_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/repeats"
        app:layout_constraintTop_toTopOf="@id/repeats_done"
        app:layout_constraintBottom_toBottomOf="@+id/repeats_done"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_margin="@dimen/dimens_8dp"
        android:textColor="@color/black"
        />

    <View
        android:id="@+id/repeats_done"
        android:layout_width="0dp"
        android:layout_height="12dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@id/repeats_left"
        app:layout_constraintBottom_toTopOf="@id/image_include"
        app:layout_constraintStart_toEndOf="@id/exercise_progress_text"
        android:layout_marginStart="@dimen/dimens_8dp"
        app:layout_constraintHorizontal_weight="1"
        android:background="@color/green_progress"
        />

    <View
        android:id="@+id/repeats_left"
        android:layout_width="0dp"
        android:layout_height="12dp"
        android:layout_marginEnd="@dimen/dimens_8dp"
        app:layout_constraintTop_toTopOf="@id/repeats_done"
        app:layout_constraintBottom_toBottomOf="@id/repeats_done"
        app:layout_constraintStart_toEndOf="@id/repeats_done"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_weight="99"
        />

    <include
        android:id="@+id/image_include"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/repeats_done"
        app:layout_constraintBottom_toTopOf="@id/parameters_recycler"
        layout="@layout/item_media_viewer"
        app:layout_constraintVertical_weight="40"
        />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/parameters_recycler"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="@dimen/dimens_8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/image_include"
        app:layout_constraintBottom_toTopOf="@id/next_card"
        app:layout_constraintVertical_weight="60"
        />

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/skip_card"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/next_card"
        app:strokeColor="@color/gray_4"
        app:strokeWidth="1dp"
        app:cardCornerRadius="@dimen/dimens_16dp"
        android:theme="@style/AppTheme"
        android:clickable="true"
        android:layout_margin="@dimen/dimens_16dp"
        app:layout_constraintHorizontal_weight="@integer/integer_1"
        >

        <TextView
            android:id="@+id/skip_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/skip"
            android:textColor="@color/black"
            android:textAlignment="center"
            android:textSize="@dimen/text_size_20"
            android:layout_marginHorizontal="@dimen/dimens_16dp"
            android:layout_marginVertical="@dimen/dimens_4dp"
            />

    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/next_card"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/skip_card"
        app:strokeColor="@color/gray_4"
        app:strokeWidth="1dp"
        app:cardCornerRadius="@dimen/dimens_16dp"
        android:theme="@style/AppTheme"
        android:clickable="true"
        android:layout_margin="@dimen/dimens_16dp"
        app:layout_constraintHorizontal_weight="@integer/integer_1"
        >

        <TextView
            android:id="@+id/next_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/next"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_20"
            android:layout_marginHorizontal="@dimen/dimens_16dp"
            android:layout_marginVertical="@dimen/dimens_4dp"
            />

    </com.google.android.material.card.MaterialCardView>

</androidx.constraintlayout.widget.ConstraintLayout>
