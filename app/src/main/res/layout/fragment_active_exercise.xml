<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="@dimen/dimens_16dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <TextView
        android:id="@+id/workout_progress_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/repeats"
        app:layout_constraintTop_toTopOf="@id/progress_recycler"
        app:layout_constraintBottom_toBottomOf="@+id/progress_recycler"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_margin="@dimen/dimens_8dp"
        android:textColor="@color/black"
        />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/progress_recycler"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/workout_image_switcher"
        app:layout_constraintStart_toEndOf="@id/workout_progress_text"
        tools:itemCount="@integer/integer_1"
        android:orientation="horizontal"
        android:layout_margin="@dimen/dimens_8dp"
        app:layout_constraintVertical_weight="5"
        />

    <ImageSwitcher
        android:id="@+id/workout_image_switcher"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/progress_recycler"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/record_notification_icon"
        android:layout_marginBottom="@dimen/dimens_16dp"
        tools:background="@color/gray_4"
        app:layout_constraintVertical_weight="30"
        />

    <ImageView
        android:id="@+id/next_image_btn"
        android:layout_width="@dimen/dimens_32dp"
        android:layout_height="@dimen/dimens_32dp"
        app:layout_constraintTop_toTopOf="@id/workout_image_switcher"
        app:layout_constraintBottom_toBottomOf="@id/workout_image_switcher"
        app:layout_constraintEnd_toEndOf="@id/workout_image_switcher"
        android:tint="@color/black"
        android:src="@drawable/ic_chevron_right"
        android:contentDescription="@string/next_image_button" />

    <ImageView
        android:id="@+id/prev_image_btn"
        android:layout_width="@dimen/dimens_32dp"
        android:layout_height="@dimen/dimens_32dp"
        app:layout_constraintTop_toTopOf="@id/workout_image_switcher"
        app:layout_constraintBottom_toBottomOf="@id/workout_image_switcher"
        app:layout_constraintStart_toStartOf="@id/workout_image_switcher"
        android:tint="@color/black"
        android:src="@drawable/ic_chevron_left"
        android:contentDescription="@string/previous_image_button" />

    <TextView
        android:id="@+id/record_notification"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/record_enabled"
        android:textStyle="italic"
        android:textSize="@dimen/text_size_18"
        android:textColor="@color/black"
        app:layout_constraintTop_toTopOf="@id/record_notification_icon"
        app:layout_constraintBottom_toBottomOf="@id/record_notification_icon"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/record_notification_icon"
        app:layout_constraintHorizontal_chainStyle="packed"
        />
    
    <ImageView
        android:id="@+id/record_notification_icon"
        android:layout_width="@dimen/dimens_24dp"
        android:layout_height="@dimen/dimens_24dp"
        app:layout_constraintTop_toBottomOf="@id/workout_image_switcher"
        app:layout_constraintStart_toEndOf="@id/record_notification"
        app:layout_constraintEnd_toStartOf="@id/record_notification_time"
        app:layout_constraintBottom_toTopOf="@id/parameters_recycler"
        android:src="@drawable/ic_radio_button_checked_black_24dp"
        android:tint="@color/dark_red"
        android:layout_margin="@dimen/dimens_8dp"
        app:layout_constraintVertical_weight="10"
        />

    <TextView
        android:id="@+id/record_notification_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/_000"
        android:textColor="@color/black"
        android:textSize="@dimen/text_size_18"
        app:layout_constraintTop_toTopOf="@id/record_notification_icon"
        app:layout_constraintBottom_toBottomOf="@id/record_notification_icon"
        app:layout_constraintStart_toEndOf="@id/record_notification_icon"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/parameters_recycler"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="@dimen/dimens_8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/record_notification_icon"
        app:layout_constraintBottom_toTopOf="@id/next_card"
        app:layout_constraintVertical_weight="55"
        />

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/prev_card"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/next_card"
        app:strokeColor="@color/gray_4"
        app:strokeWidth="1dp"
        app:cardCornerRadius="@dimen/dimens_16dp"
        android:theme="@style/AppTheme"
        android:clickable="true"
        android:layout_margin="@dimen/dimens_16dp"
        app:layout_constraintHorizontal_weight="@integer/integer_1"
        >

        <TextView
            android:id="@+id/prev_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/skip"
            android:textColor="@color/black"
            android:textAlignment="center"
            android:textSize="@dimen/text_size_20"
            android:layout_marginHorizontal="@dimen/dimens_16dp"
            android:layout_marginVertical="@dimen/dimens_4dp"
            />

    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/next_card"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/prev_card"
        app:strokeColor="@color/gray_4"
        app:strokeWidth="1dp"
        app:cardCornerRadius="@dimen/dimens_16dp"
        android:theme="@style/AppTheme"
        android:clickable="true"
        android:layout_margin="@dimen/dimens_16dp"
        app:layout_constraintHorizontal_weight="@integer/integer_1"
        >

        <TextView
            android:id="@+id/next_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/next"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_20"
            android:layout_marginHorizontal="@dimen/dimens_16dp"
            android:layout_marginVertical="@dimen/dimens_4dp"
            />

    </com.google.android.material.card.MaterialCardView>

</androidx.constraintlayout.widget.ConstraintLayout>
