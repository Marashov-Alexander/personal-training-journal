<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/padding_5"
    android:layout_marginEnd="@dimen/padding_70"
    android:layout_marginBottom="@dimen/padding_5">

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/sender_icon"
        android:background="@drawable/rounded_filled_outline"
        android:layout_width="@dimen/padding_50"
        android:layout_height="@dimen/padding_50"
        app:layout_constraintTop_toBottomOf="@id/message"
        app:layout_constraintStart_toStartOf="parent"
        />
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/received_message_bg"
        android:layout_marginStart="@dimen/padding_50"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        >
        <TextView
            android:id="@+id/sender_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:paddingHorizontal="@dimen/padding_20"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:textStyle="bold"
            tools:text="author"
            android:textSize="@dimen/text_size_13"
            />
        <TextView
            android:id="@+id/message_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:paddingVertical="@dimen/padding_10"
            android:paddingHorizontal="@dimen/padding_20"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/sender_name"

            tools:text="Message text, lots of text"
            android:textSize="@dimen/text_size_13"
            />
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/request"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingVertical="@dimen/padding_10"
            android:background="@drawable/rounded_outline"
            app:layout_constraintTop_toBottomOf="@id/message_text"
            app:layout_constraintBottom_toTopOf="@id/message_element"
           >
            <TextView
                android:id="@+id/request_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/request_text"
                android:paddingHorizontal="@dimen/padding_10"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <TextView
                android:id="@+id/decline_button"
                android:layout_width="0dp"
                android:textAlignment="center"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_outline_toggle"
                android:paddingHorizontal="@dimen/padding_5"
                android:paddingVertical="@dimen/padding_5"
                android:textSize="@dimen/text_size_13"
                android:text="@string/decline"
                android:textColor="@color/black"
                android:layout_marginHorizontal="@dimen/padding_5"
                android:layout_marginTop="@dimen/padding_10"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/request_text"
                app:layout_constraintEnd_toStartOf="@id/accept_button"/>
            <TextView
                android:id="@+id/accept_button"
                android:layout_width="0dp"
                android:textAlignment="center"
                android:layout_height="wrap_content"
                android:paddingHorizontal="@dimen/padding_5"
                android:paddingVertical="@dimen/padding_5"
                android:layout_marginHorizontal="@dimen/padding_5"
                android:textSize="@dimen/text_size_13"
                android:textColor="@color/black"
                android:text="@string/accept"
                android:background="@drawable/rounded_outline_toggle_active"
                android:layout_marginTop="@dimen/padding_10"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/request_text"
                app:layout_constraintStart_toEndOf="@id/decline_button"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
        <androidx.recyclerview.widget.RecyclerView
            android:paddingHorizontal="@dimen/padding_10"
            android:id="@+id/message_element"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            app:layout_constraintTop_toBottomOf="@id/request"
            app:layout_constraintBottom_toTopOf="@id/message_send_time"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:isScrollContainer="false"
             />
        <TextView
            android:id="@+id/message_send_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/gray_1"
            app:layout_constraintTop_toBottomOf="@id/message_element"
            app:layout_constraintEnd_toEndOf="parent"
            tools:text="12:00"
            android:paddingHorizontal="@dimen/padding_10"
            android:paddingVertical="@dimen/padding_4"
            android:textSize="10sp"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>