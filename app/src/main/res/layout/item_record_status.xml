<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/record_notification"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/record_enabled"
        android:textStyle="italic"
        android:textSize="@dimen/text_size_18"
        android:textColor="@color/black"
        app:layout_constraintTop_toTopOf="@id/record_notification_icon"
        app:layout_constraintBottom_toBottomOf="@id/record_notification_icon"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/record_notification_icon"
        app:layout_constraintHorizontal_chainStyle="packed"
        />

    <ImageView
        android:id="@+id/record_notification_icon"
        android:layout_width="@dimen/dimens_24dp"
        android:layout_height="@dimen/dimens_24dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/record_notification"
        app:layout_constraintEnd_toStartOf="@id/record_notification_time"
        app:layout_constraintBottom_toBottomOf="parent"
        android:src="@drawable/ic_radio_button_checked_black_24dp"
        android:tint="@color/dark_red"
        android:layout_margin="@dimen/dimens_8dp"
        app:layout_constraintVertical_weight="10"
        android:contentDescription="@string/record_enabled" />

    <TextView
        android:id="@+id/record_notification_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/_000"
        android:textColor="@color/black"
        android:textSize="@dimen/text_size_18"
        app:layout_constraintTop_toTopOf="@id/record_notification_icon"
        app:layout_constraintBottom_toBottomOf="@id/record_notification_icon"
        app:layout_constraintStart_toEndOf="@id/record_notification_icon"
        app:layout_constraintEnd_toEndOf="parent"
        />

</androidx.constraintlayout.widget.ConstraintLayout>