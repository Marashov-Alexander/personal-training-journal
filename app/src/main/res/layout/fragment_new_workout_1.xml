<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="@dimen/dimens_8dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/input_workout_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:background="@color/background"
        android:textColorHint="@color/gray_3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        >

        <AutoCompleteTextView
            android:id="@+id/workout_name_text"
            style="@style/Input"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/enter_workout_name"/>
    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:id="@+id/workout_name_required"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/star_required"
        android:textColor="@color/red"
        app:layout_constraintBottom_toBottomOf="@id/input_workout_name"
        app:layout_constraintRight_toLeftOf="@id/input_workout_name"
        app:layout_constraintTop_toTopOf="@id/input_workout_name" />

    <TextView
        android:id="@+id/exercises_list_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/input_workout_name"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="@string/exercises_list"
        android:textColor="@color/black"
        android:textSize="25sp"
        />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/exercises_recycler"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/exercises_list_label"
        app:layout_constraintBottom_toTopOf="@id/next_step_card"
        android:layout_marginBottom="8dp"
        android:background="@drawable/rounded_outline"
        android:padding="1dp"
        />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/add_exercise_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@id/exercises_recycler"
        app:layout_constraintEnd_toEndOf="@id/exercises_recycler"
        android:backgroundTint="@color/light_blue"
        android:tint="@color/white"
        app:srcCompat="@drawable/ic_add_black_24dp"
        style="@style/RoundedCornerButton"
        android:layout_margin="16dp"
        />

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/next_step_card"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:strokeColor="@color/gray_4"
        app:strokeWidth="1dp"
        app:cardCornerRadius="@dimen/dimens_16dp"
        android:theme="@style/AppTheme"
        android:clickable="true"
        >

    <TextView
        android:id="@+id/next_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/next"
        android:textColor="@color/black"
        android:textSize="@dimen/text_size_25"
        android:drawableEnd="@drawable/ic_chevron_right"
        android:layout_marginHorizontal="@dimen/dimens_16dp"
        android:layout_marginVertical="@dimen/dimens_4dp"
        />

    </com.google.android.material.card.MaterialCardView>

</androidx.constraintlayout.widget.ConstraintLayout>