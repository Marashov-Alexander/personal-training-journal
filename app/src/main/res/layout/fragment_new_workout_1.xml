<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="@dimen/dimens_16dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/enter_workout_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:text="@string/enter_workout_name"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="20sp"
        />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/input_workout_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:background="@color/white"
        android:textColorHint="@color/gray_3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/enter_workout_name"
        >

        <AutoCompleteTextView
            android:id="@+id/email_et"
            style="@style/Input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/workout" />
    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:id="@+id/workout_name_required"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/star_required"
        android:textColor="@color/red"
        app:layout_constraintBottom_toBottomOf="@id/input_workout_name"
        app:layout_constraintRight_toLeftOf="@id/input_workout_name"
        app:layout_constraintTop_toTopOf="@id/input_workout_name" />

    <TextView
        android:id="@+id/exercises_list_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/input_workout_name"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="@string/exercises_list"
        android:textColor="@color/black"
        android:textSize="28sp"
        />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/exercises_recycler"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/exercises_list_label"
        app:layout_constraintBottom_toTopOf="@id/next_text_view"
        android:layout_marginBottom="8dp"
        android:background="@drawable/rounded_outline"
        android:padding="@dimen/dimens_8dp"
        />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/add_exercise_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@id/exercises_recycler"
        app:layout_constraintEnd_toEndOf="@id/exercises_recycler"
        android:backgroundTint="@color/light_blue"
        android:tint="@color/white"
        app:srcCompat="@drawable/ic_add_black_24dp"
        style="@style/RoundedCornerButton"
        android:layout_margin="16dp"
        />

    <TextView
        android:id="@+id/next_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/next_image_view"
        android:text="@string/next"
        android:textColor="@color/black"
        android:textSize="25sp"
        />
    <ImageView
        android:id="@+id/next_image_view"
        android:layout_width="24dp"
        android:layout_height="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/next_text_view"
        app:layout_constraintBottom_toBottomOf="@id/next_text_view"
        android:tint="@color/black"
        android:src="@drawable/ic_baseline_arrow_forward_ios_24"
        />

</androidx.constraintlayout.widget.ConstraintLayout>