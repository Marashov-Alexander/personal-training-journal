<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="@dimen/dimens_16dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/input_exercise_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:background="@color/background"
        android:textColorHint="@color/gray_3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <AutoCompleteTextView
            android:id="@+id/name"
            style="@style/Input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/enter_exercise_name" />
    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:id="@+id/exercise_name_required"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/star_required"
        android:textColor="@color/red"
        app:layout_constraintBottom_toBottomOf="@id/input_exercise_name"
        app:layout_constraintRight_toLeftOf="@id/input_exercise_name"
        app:layout_constraintTop_toTopOf="@id/input_exercise_name" />

    <TextView
        android:id="@+id/exercise_category_required"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/star_required"
        android:textColor="@color/red"
        app:layout_constraintBottom_toBottomOf="@id/category_text_view"
        app:layout_constraintRight_toLeftOf="@id/category_text_view"
        app:layout_constraintTop_toTopOf="@id/category_text_view" />

    <TextView
        android:id="@+id/category_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/input_exercise_name"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginHorizontal="10dp"
        android:paddingHorizontal="4dp"
        android:layout_marginTop="@dimen/dimens_16dp"
        android:text="@string/category"
        android:textSize="@dimen/text_size_18"
        android:textColor="@color/black"
        />

    <Spinner
        android:id="@+id/exercise_type_spinner"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:entries="@array/exercise_types"
        app:layout_constraintTop_toTopOf="@id/category_text_view"
        app:layout_constraintBottom_toBottomOf="@id/category_text_view"
        app:layout_constraintStart_toEndOf="@id/category_text_view"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@drawable/rounded_outline"
        android:layout_margin="@dimen/dimens_8dp"
        android:textAlignment="center"
        android:padding="2dp"
        />


    <include
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/category_text_view"
        app:layout_constraintBottom_toTopOf="@id/next_step_card"
        layout="@layout/element_exercise_parameters"
        />

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/next_step_card"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:strokeColor="@color/gray_4"
        app:strokeWidth="1dp"
        app:cardCornerRadius="@dimen/dimens_16dp"
        android:theme="@style/AppTheme"
        android:clickable="true"
        >

    <TextView
        android:id="@+id/next_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/next"
        android:textColor="@color/black"
        android:textSize="@dimen/text_size_25"
        android:drawableEnd="@drawable/ic_chevron_right"
        android:layout_marginHorizontal="@dimen/dimens_16dp"
        android:layout_marginVertical="@dimen/dimens_4dp"
        />

    </com.google.android.material.card.MaterialCardView>

</androidx.constraintlayout.widget.ConstraintLayout>