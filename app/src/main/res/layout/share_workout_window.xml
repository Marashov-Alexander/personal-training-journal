<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <TextView
        android:id="@+id/share_workout_header"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:text="@string/share_workout"
        android:textStyle="bold"
        android:textSize="30sp"
        android:textAlignment="center"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="@dimen/dimens_16dp"
        />
    <TextView
        android:id="@+id/share_public"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="@dimen/text_size_20"
        android:text="@string/share_public"
        android:gravity="end"
        app:layout_constraintTop_toBottomOf="@id/share_workout_header"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/share_public_checkbox"
        android:layout_marginTop="@dimen/dimens_24dp"
        android:layout_marginEnd="@dimen/dimens_8dp"
        />
    <CheckBox
        android:id="@+id/share_public_checkbox"
        android:layout_width="@dimen/dimens_32dp"
        android:layout_height="@dimen/dimens_32dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/share_public"
        app:layout_constraintBottom_toBottomOf="@id/share_public"
        />

    <TextView
        android:id="@+id/choose_groups_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/choose_groups"
        app:layout_constraintTop_toBottomOf="@id/share_public"
        android:textSize="@dimen/text_size_25"
        android:textColor="@color/gray_3"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="@dimen/dimens_16dp"
        />

    <TextView
        android:id="@+id/choose_all_groups"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:gravity="center_vertical"
        android:textSize="@dimen/text_size_18"
        android:textColor="@color/gray_2"
        app:layout_constraintTop_toTopOf="@id/choose_all_groups_checkbox"
        app:layout_constraintBottom_toBottomOf="@id/choose_all_groups_checkbox"
        android:text="@string/choose_all"
        app:layout_constraintEnd_toStartOf="@id/choose_all_groups_checkbox"
        android:layout_marginEnd="@dimen/dimens_8dp"
        />
    
    <CheckBox
        android:id="@+id/choose_all_groups_checkbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/choose_groups_text"
        />

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/choose_groups_text"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_margin="@dimen/dimens_16dp"
        />

</androidx.constraintlayout.widget.ConstraintLayout>