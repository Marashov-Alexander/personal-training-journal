<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:padding="@dimen/dimens_8dp">

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        android:text="@string/workout"
        android:gravity="center"
        android:textSize="22sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/exercises_recycler"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:itemCount="@integer/integer_1"
        app:layout_constraintTop_toBottomOf="@id/title"
        android:padding="@dimen/dimens_32dp"
        android:orientation="horizontal"
        />

    <View
        android:id="@+id/day_chosen"
        app:layout_constraintTop_toTopOf="@id/day_mode"
        app:layout_constraintBottom_toBottomOf="@id/day_mode"
        app:layout_constraintStart_toStartOf="@id/day_mode"
        app:layout_constraintEnd_toEndOf="@id/day_mode"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:visibility="invisible"
        android:background="@drawable/day_highlithed_background"
        />

    <TextView
        android:id="@+id/day_mode"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/exercises_recycler"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/week_mode"
        android:text="@string/day"
        style="@style/PeriodTextButton"
        />

    <View
        android:id="@+id/day_line"
        android:layout_width="0dp"
        android:layout_height="2dp"
        android:background="@color/white"
        app:layout_constraintStart_toStartOf="@id/day_mode"
        app:layout_constraintEnd_toEndOf="@id/day_mode"
        app:layout_constraintTop_toBottomOf="@id/day_mode"
        android:elevation="4dp"
        android:layout_marginBottom="4dp"
        />

    <View
        android:id="@+id/week_chosen"
        app:layout_constraintTop_toTopOf="@id/week_mode"
        app:layout_constraintBottom_toBottomOf="@id/week_mode"
        app:layout_constraintStart_toStartOf="@id/week_mode"
        app:layout_constraintEnd_toEndOf="@id/week_mode"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:visibility="visible"
        android:background="@drawable/day_highlithed_background"
        />

    <TextView
        android:id="@+id/week_mode"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/day_mode"
        app:layout_constraintBottom_toBottomOf="@id/day_mode"
        app:layout_constraintStart_toEndOf="@id/day_mode"
        app:layout_constraintEnd_toStartOf="@id/month_mode"
        android:text="@string/week"
        style="@style/PeriodTextButton"
        />

    <View
        android:id="@+id/week_line"
        android:layout_width="0dp"
        android:layout_height="2dp"
        android:background="@color/magic_mint"
        app:layout_constraintStart_toStartOf="@id/week_mode"
        app:layout_constraintEnd_toEndOf="@id/week_mode"
        app:layout_constraintTop_toBottomOf="@id/week_mode"
        android:elevation="4dp"
        android:layout_marginBottom="4dp"
        />

    <View
        android:id="@+id/month_chosen"
        app:layout_constraintTop_toTopOf="@id/month_mode"
        app:layout_constraintBottom_toBottomOf="@id/month_mode"
        app:layout_constraintStart_toStartOf="@id/month_mode"
        app:layout_constraintEnd_toEndOf="@id/month_mode"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:visibility="invisible"
        android:background="@drawable/day_highlithed_background"
        />

    <TextView
        android:id="@+id/month_mode"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/day_mode"
        app:layout_constraintBottom_toBottomOf="@id/day_mode"
        app:layout_constraintStart_toEndOf="@id/week_mode"
        app:layout_constraintEnd_toStartOf="@id/year_mode"
        android:text="@string/month"
        style="@style/PeriodTextButton"
        />

    <View
        android:id="@+id/month_line"
        android:layout_width="0dp"
        android:layout_height="2dp"
        android:background="@color/white"
        app:layout_constraintStart_toStartOf="@id/month_mode"
        app:layout_constraintEnd_toEndOf="@id/month_mode"
        app:layout_constraintTop_toBottomOf="@id/month_mode"
        android:elevation="4dp"
        android:layout_marginBottom="4dp"
        />

    <View
        android:id="@+id/year_chosen"
        app:layout_constraintTop_toTopOf="@id/year_mode"
        app:layout_constraintBottom_toBottomOf="@id/year_mode"
        app:layout_constraintStart_toStartOf="@id/year_mode"
        app:layout_constraintEnd_toEndOf="@id/year_mode"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:visibility="invisible"
        android:background="@drawable/day_highlithed_background"
        />

    <TextView
        android:id="@+id/year_mode"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/day_mode"
        app:layout_constraintBottom_toBottomOf="@id/day_mode"
        app:layout_constraintStart_toEndOf="@id/month_mode"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="@string/year"
        style="@style/PeriodTextButton"
        />

    <View
        android:id="@+id/year_line"
        android:layout_width="0dp"
        android:layout_height="2dp"
        android:background="@color/white"
        app:layout_constraintStart_toStartOf="@id/year_mode"
        app:layout_constraintEnd_toEndOf="@id/year_mode"
        app:layout_constraintTop_toBottomOf="@id/year_mode"
        android:elevation="4dp"
        android:layout_marginBottom="4dp"
        />

    <ImageView
        android:id="@+id/prev_period_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/period"
        app:layout_constraintBottom_toBottomOf="@id/period"
        android:src="@drawable/ic_play_arrow_black_24dp"
        android:scaleX="-1"
        android:tint="@color/gray_3"
        />

    <TextView
        android:id="@+id/period"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/prev_period_btn"
        app:layout_constraintEnd_toStartOf="@id/next_period_btn"
        app:layout_constraintTop_toBottomOf="@id/day_line"
        android:text="@string/period_dummy"
        android:textSize="@dimen/text_size_20"
        android:textColor="@color/black"
        android:gravity="center"
        android:layout_marginVertical="@dimen/dimens_16dp"
        />

    <ImageView
        android:id="@+id/next_period_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/period"
        app:layout_constraintBottom_toBottomOf="@id/period"
        android:src="@drawable/ic_play_arrow_black_24dp"
        android:tint="@color/gray_3"
        />

    <ru.ok.technopolis.training.personal.views.ProgressChartView
        android:id="@+id/chart"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:itemWidth="35dp"
        app:itemColor="@color/gray_5"
        app:badColor="@color/red_transparent"
        app:goodColor="@color/green_progress"
        app:goalLineColor="@color/blackbird_edge"
        app:startLineColor="@color/shadow_start_light"
        app:layout_constraintTop_toBottomOf="@id/period"
        app:layout_constraintBottom_toTopOf="@id/best_result_image"
        android:padding="@dimen/dimens_16dp"
        android:layout_marginTop="@dimen/dimens_16dp"
        />

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/more_card"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@id/chart"
        app:layout_constraintEnd_toEndOf="parent"
        app:strokeColor="@color/gray_4"
        app:strokeWidth="1dp"
        app:cardCornerRadius="@dimen/dimens_16dp"
        android:theme="@style/AppTheme"
        android:clickable="true"
        >

        <TextView
            android:id="@+id/more_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/more"

            android:fontFamily="sans-serif-thin"
            android:textStyle="italic"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_20"
            android:layout_marginHorizontal="@dimen/dimens_16dp"
            android:layout_marginVertical="@dimen/dimens_4dp"
            />

    </com.google.android.material.card.MaterialCardView>

    <ImageView
        android:id="@+id/best_result_image"
        android:layout_width="@dimen/dim64"
        android:layout_height="@dimen/dim64"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/chart"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/best_result_text"
        android:tint="@color/blackbird_edge"
        android:src="@drawable/ic_stars_black_24dp"
        android:layout_marginStart="@dimen/dimens_16dp"
        android:layout_marginVertical="@dimen/dimens_32dp"
        />

    <TextView
        android:id="@+id/best_result_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/best_result"
        android:textSize="@dimen/text_size_18"
        app:layout_constraintTop_toTopOf="@id/best_result_image"
        app:layout_constraintStart_toEndOf="@id/best_result_image"
        app:layout_constraintBottom_toTopOf="@id/best_result_date"
        app:layout_constraintEnd_toStartOf="@id/best_result_value"
        android:textColor="@color/black"
        />

    <TextView
        android:id="@+id/best_result_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/date_dummy"
        app:layout_constraintTop_toBottomOf="@id/best_result_text"
        app:layout_constraintStart_toEndOf="@id/best_result_image"
        app:layout_constraintBottom_toBottomOf="@id/best_result_image"
        android:textColor="@color/black"
        />

    <TextView
        android:id="@+id/best_result_value"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/dummy_percents"
        app:layout_constraintStart_toEndOf="@id/best_result_text"
        app:layout_constraintTop_toTopOf="@id/best_result_image"
        app:layout_constraintBottom_toBottomOf="@id/best_result_image"
        app:layout_constraintEnd_toEndOf="parent"
        android:textSize="@dimen/text_size_25"
        android:gravity="center"
        android:textColor="@color/black"
        />

</androidx.constraintlayout.widget.ConstraintLayout>