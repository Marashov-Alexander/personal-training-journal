<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/workout_start_card"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clickable="true"
        android:theme="@style/AppTheme"
        app:strokeWidth="@dimen/dimens_4dp"
        app:strokeColor="@color/gray_2"
        app:cardBackgroundColor="@color/background"
        app:cardCornerRadius="96dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_margin="@dimen/dimens_4dp"
        >
        <ImageView
            android:id="@+id/workout_start_icon"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/padding_16"
            android:contentDescription="@string/start_workout"
            android:src="@drawable/ic_play_arrow_black_24dp"
            android:layout_gravity="center"
            android:tint="@color/gray_2"
            />
    </com.google.android.material.card.MaterialCardView>

</androidx.constraintlayout.widget.ConstraintLayout>