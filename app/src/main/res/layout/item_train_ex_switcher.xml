<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools">

    <Button
        android:id="@+id/train_switch_button"
        android:layout_width="0dp"
        android:layout_height="@dimen/padding_40"
        android:textSize="@dimen/text_size_18"
        android:text="@string/training_switcher_text"
        android:textAlignment="center"
        android:background="@color/white"
        android:textColor="@drawable/clickable_element_selector"
        app:layout_constraintBottom_toTopOf="@id/train_switch_line"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@id/ex_switch_button"
        android:textStyle="italic" />

    <Button
        android:id="@+id/ex_switch_button"
        android:layout_width="0dp"
        android:layout_height="@dimen/padding_40"
        android:textSize="@dimen/text_size_18"
        android:textAlignment="center"
        android:background="@color/white"
        android:text="@string/ex_switcher_text"
        android:textColor="@drawable/clickable_element_selector"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/train_switch_button"
        app:layout_constraintBottom_toTopOf="@id/ex_switch_line"
        android:textStyle="italic" />

    <View
        android:id="@+id/train_switch_line"
        android:layout_width="0dp"
        android:layout_height="2dp"
        android:background="@color/design_default_color_secondary_variant"
        app:layout_constraintEnd_toEndOf="@id/train_switch_button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/train_switch_button"
        android:elevation="4dp"
        android:layout_marginBottom="4dp"
        />
    <View
        android:id="@+id/ex_switch_line"
        android:layout_width="0dp"
        android:layout_height="2dp"
        android:background="@color/gray_4"
        app:layout_constraintEnd_toEndOf="@id/ex_switch_button"
        app:layout_constraintStart_toStartOf="@id/ex_switch_button"
        app:layout_constraintTop_toBottomOf="@id/train_switch_button"
        android:elevation="4dp"
        android:layout_marginBottom="4dp"
        />
</androidx.constraintlayout.widget.ConstraintLayout>