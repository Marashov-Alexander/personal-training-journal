<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/padding_5"
    android:layout_marginEnd="@dimen/padding_70"
    android:layout_marginBottom="@dimen/padding_16">

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/sender_icon"
        android:layout_width="@dimen/padding_50"
        android:layout_height="@dimen/padding_50"
        android:background="@drawable/rounded_filled_outline"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/message" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/received_message_bg"
        android:layout_marginStart="@dimen/padding_50"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/message_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingHorizontal="@dimen/padding_20"
            android:paddingVertical="@dimen/padding_10"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_13"
            app:layout_constraintBottom_toTopOf="@id/message_send_time"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Message text," />

        <TextView
            android:id="@+id/message_send_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingHorizontal="@dimen/padding_10"
            android:paddingVertical="@dimen/padding_4"
            android:textColor="@color/gray_1"
            android:textSize="10sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/message_text"
            tools:text="12:00" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>