<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:padding="@dimen/dimens_8dp"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/author_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/padding_10"
            android:text="@string/author"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="@id/author_name"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/author_name" />

        <TextView
            android:id="@+id/author_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingHorizontal="@dimen/padding_10"
            android:textSize="@dimen/text_size_18"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@id/workout_scroll_info"
            app:layout_constraintStart_toEndOf="@id/author_text"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Author Name" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/workout_scroll_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingVertical="@dimen/dimens_16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/author_name"
            tools:itemCount="@integer/integer_1" />

        <include
            android:id="@+id/workout_image_switcher"
            layout="@layout/item_media_viewer"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_marginBottom="@dimen/dimens_16dp"
            app:layout_constraintBottom_toTopOf="@id/workout_ex_list"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/short_workout_downloads" />

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/share_card"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:clickable="true"
            android:theme="@style/AppTheme"
            app:strokeWidth="0dp"
            app:cardBackgroundColor="@color/background"
            app:cardCornerRadius="@dimen/dimens_16dp"
            app:layout_constraintTop_toTopOf="@id/info_card"
            app:layout_constraintBottom_toBottomOf="@id/info_card"
            app:layout_constraintStart_toStartOf="parent"
            >

            <TextView
                android:id="@+id/share_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/padding_5"
                android:text="@string/share"
                android:textSize="12sp"
                android:textStyle="italic"
                android:paddingHorizontal="@dimen/dimens_8dp"
                android:layout_gravity="center"
                android:drawableTop="@drawable/ic_reply_black_24dp"
                />
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/info_card"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:theme="@style/AppTheme"
            app:strokeWidth="0dp"
            app:cardBackgroundColor="@color/background"
            app:cardCornerRadius="@dimen/dimens_16dp"
            android:layout_marginBottom="@dimen/padding_10"
            app:layout_constraintBottom_toBottomOf="@id/workout_image_switcher"
            app:layout_constraintEnd_toEndOf="parent">

            <TextView
                android:id="@+id/info_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/description"
                android:textSize="12sp"
                android:textStyle="italic"
                android:drawableTop="@drawable/ic_info"
                android:padding="@dimen/dimens_8dp"
                />
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/workout_start_card"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:theme="@style/AppTheme"
            app:strokeWidth="@dimen/dimens_4dp"
            app:strokeColor="@color/gray_2"
            app:cardBackgroundColor="@color/background"
            app:cardCornerRadius="96dp"
            app:layout_constraintBottom_toBottomOf="@id/workout_image_switcher"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            >
            <ImageView
                android:id="@+id/workout_start_icon"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_margin="@dimen/padding_16"
                android:contentDescription="@string/start_workout"
                android:src="@drawable/ic_play_arrow_black_24dp"
                android:tint="@color/gray_2"
                />
        </com.google.android.material.card.MaterialCardView>

        <TextView
            android:id="@+id/difficulty_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dimens_8dp"
            android:textColor="@color/design_default_color_secondary_variant"
            android:textSize="@dimen/text_size_13"
            app:layout_constraintBottom_toBottomOf="@id/short_workout_downloads"
            app:layout_constraintEnd_toStartOf="@id/rank_number"
            app:layout_constraintStart_toEndOf="@id/downloads_number"
            app:layout_constraintTop_toTopOf="@id/short_workout_downloads"
            tools:text="Сложность" />

        <ImageView
            android:id="@+id/difficulty_icon"
            android:layout_width="@dimen/dimens_24dp"
            android:layout_height="@dimen/dimens_24dp"
            android:layout_margin="@dimen/padding_5"
            android:contentDescription="@string/workout_downloads"
            android:src="@drawable/ic_difficulty_"
            app:layout_constraintBottom_toBottomOf="@id/short_workout_downloads"
            app:layout_constraintStart_toEndOf="@id/difficulty_value"
            app:layout_constraintTop_toTopOf="@id/short_workout_downloads" />

        <TextView
            android:id="@+id/downloads_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dimens_8dp"
            android:textColor="@color/design_default_color_secondary_variant"
            android:textSize="@dimen/text_size_13"
            app:layout_constraintBottom_toBottomOf="@id/short_workout_downloads"
            app:layout_constraintStart_toEndOf="@id/short_workout_downloads"
            app:layout_constraintTop_toTopOf="@id/short_workout_downloads"
            tools:text="123" />

        <ImageView
            android:id="@+id/short_workout_downloads"
            android:layout_width="@dimen/dimens_24dp"
            android:layout_height="@dimen/dimens_24dp"
            android:layout_margin="@dimen/padding_5"
            android:contentDescription="@string/workout_downloads"
            android:src="@drawable/ic_baseline_group_theme_24"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/workout_scroll_info" />

        <ImageView
            android:id="@+id/short_workout_star"
            android:layout_width="@dimen/dimens_24dp"
            android:layout_height="@dimen/dimens_24dp"
            android:layout_margin="@dimen/padding_5"
            android:contentDescription="@string/workout_rank"
            android:src="@drawable/ic_baseline_star_theme_color_24"
            app:layout_constraintBottom_toBottomOf="@id/short_workout_downloads"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/short_workout_downloads" />

        <TextView
            android:id="@+id/rank_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/dimens_8dp"
            android:textColor="@color/design_default_color_secondary_variant"
            android:textSize="@dimen/text_size_13"
            app:layout_constraintBottom_toBottomOf="@id/short_workout_downloads"
            app:layout_constraintEnd_toStartOf="@id/short_workout_star"
            app:layout_constraintTop_toTopOf="@id/short_workout_downloads"
            tools:text="9.8" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/workout_ex_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:isScrollContainer="false"
            android:nestedScrollingEnabled="false"
            app:layout_constraintTop_toBottomOf="@id/workout_image_switcher"
            app:layout_constraintStart_toStartOf="parent" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>