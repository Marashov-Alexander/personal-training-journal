<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/days_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <TextView
        android:id="@+id/planTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/scheduled_workouts"
        android:textAlignment="center"
        android:textSize="24sp"
        android:textColor="@color/black"
        android:textStyle="italic"
        android:layout_marginTop="@dimen/dimens_8dp"
        app:layout_constraintTop_toBottomOf="@id/days_recycler_view"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <TextView
        android:id="@+id/hint_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@id/hint_arrow"
        app:layout_constraintStart_toStartOf="@id/scheduled_workouts_recycler"
        app:layout_constraintEnd_toEndOf="@id/scheduled_workouts_recycler"
        android:textColor="@color/gray_2_1"
        android:textSize="@dimen/text_size_20"
        android:text="@string/empty_plan"
        android:layout_marginBottom="@dimen/dimens_16dp"
        android:textStyle="italic"
        android:textAlignment="center"
        android:visibility="invisible"
        />

    <ImageView
        android:id="@+id/hint_arrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toStartOf="@id/add_workout_button"
        app:layout_constraintBottom_toBottomOf="parent"
        android:src="@drawable/ic_my_arrow"
        android:layout_marginBottom="28dp"
        android:visibility="invisible"
        />


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/scheduled_workouts_recycler"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/dimens_8dp"
        app:layout_constraintTop_toBottomOf="@id/planTextView"
        app:layout_constraintBottom_toBottomOf="parent"
        />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/add_workout_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:backgroundTint="@color/light_blue"
        android:tint="@color/white"
        app:srcCompat="@drawable/ic_add_black_24dp"
        style="@style/RoundedCornerButton"
        android:layout_margin="16dp"
        />

</androidx.constraintlayout.widget.ConstraintLayout>