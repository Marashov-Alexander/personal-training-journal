<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/pos_card"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dimens_8dp"
        android:padding="@dimen/dimens_8dp"
        android:theme="@style/AppTheme"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="@dimen/dimens_16dp"
        app:layout_constraintStart_toStartOf="@id/exercise_image_switcher"
        app:layout_constraintTop_toTopOf="@id/exercise_image_switcher">

        <TextView
            android:id="@+id/pos_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/dimens_16dp"
            android:layout_marginVertical="@dimen/dimens_4dp"
            android:fontFamily="sans-serif-thin"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_20"
            tools:text="1/10" />

    </com.google.android.material.card.MaterialCardView>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/exercise_image_switcher"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/dimens_4dp"
        android:layout_marginBottom="@dimen/dimens_8dp"
        android:background="@drawable/rounded_outline"
        android:padding="@dimen/dimens_8dp"
         />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/edit_content_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dimens_8dp"
        android:clickable="true"
        android:contentDescription="@string/edit_content_button"
        android:tint="@color/black"
        app:backgroundTint="@color/white"
        app:fabSize="mini"
        app:layout_constraintBottom_toBottomOf="@id/exercise_image_switcher"
        app:layout_constraintEnd_toEndOf="@id/exercise_image_switcher"
        app:srcCompat="@drawable/ic_add_black_24dp" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/remove_content_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dimens_8dp"
        android:clickable="true"
        android:contentDescription="@string/edit_content_button"
        android:tint="@color/black"
        app:backgroundTint="@color/white"
        app:fabSize="mini"
        app:layout_constraintEnd_toEndOf="@id/exercise_image_switcher"
        app:layout_constraintTop_toTopOf="@id/exercise_image_switcher"
        app:srcCompat="@drawable/ic_delete_black_24dp" />

</androidx.constraintlayout.widget.ConstraintLayout>