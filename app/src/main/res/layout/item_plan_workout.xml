<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/rounded_filled_outline">

    <TextView
        android:id="@+id/plan_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginVertical="@dimen/padding_20"
        android:text="@string/plan_workout"
        android:textSize="@dimen/text_size_25"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/choose_repetition"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/padding_10"
        android:layout_marginTop="25dp"
        android:text="@string/choose_repetition"
        android:textSize="@dimen/text_size_20"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/plan_header"

        />

    <Spinner
        android:id="@+id/workout_repetition_variants"
        android:layout_width="match_parent"
        android:layout_height="@dimen/padding_40"
        android:layout_marginHorizontal="@dimen/padding_20"
        android:layout_marginTop="@dimen/padding_10"
        android:background="@drawable/rounded_outline"
        android:entries="@array/workout_repetition_variants"
        android:textAlignment="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/choose_repetition" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/every_n_day"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginHorizontal="@dimen/padding_10"
        android:visibility="invisible"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/workout_repetition_variants">

        <TextView
            android:id="@+id/every_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/padding_10"
            android:text="@string/every"
            android:textSize="@dimen/text_size_20"
            app:layout_constraintBottom_toBottomOf="@id/n_day_input"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/n_day_input" />

        <EditText
            android:id="@+id/n_day_input"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/padding_10"
            android:background="@drawable/rounded_outline"
            android:paddingHorizontal="30dp"
            android:paddingVertical="@dimen/padding_10"
            android:text="@string/_2"
            app:layout_constraintStart_toEndOf="@id/every_text"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/day_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/padding_10"
            android:text="@string/_day"
            android:textSize="@dimen/text_size_20"
            app:layout_constraintBottom_toBottomOf="@id/n_day_input"
            app:layout_constraintStart_toEndOf="@id/n_day_input"
            app:layout_constraintTop_toTopOf="@id/n_day_input" />

        <CheckBox
            android:id="@+id/every_day_checkbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/every_day"
            android:textSize="@dimen/text_size_20"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/n_day_input" />

        <TextView
            android:id="@+id/start_at_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/start_at"
            android:textSize="@dimen/text_size_20"
            app:layout_constraintBottom_toBottomOf="@id/start_at_edit_text"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/start_at_edit_text" />

        <EditText
            android:id="@+id/start_at_edit_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:focusable="false"
            app:layout_constraintStart_toEndOf="@id/start_at_text"
            app:layout_constraintTop_toBottomOf="@id/every_day_checkbox" />
    </androidx.constraintlayout.widget.ConstraintLayout>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/one_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/padding_10"
        android:visibility="invisible"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/workout_repetition_variants">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/pick_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_outline"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/date_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:paddingHorizontal="@dimen/padding_10"
                android:paddingVertical="@dimen/padding_5"
                android:text="@string/_25_05_2021"
                android:textSize="@dimen/text_size_20"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/calendar_icon"
                android:layout_width="27dp"
                android:layout_height="22dp"
                android:layout_margin="@dimen/padding_10"
                android:src="@drawable/ic_baseline_calendar_today_24"
                app:layout_constraintBottom_toBottomOf="@id/pick_date"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/date_text"
                app:layout_constraintTop_toTopOf="@id/date_text" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <TextView
            android:id="@+id/date_start_at_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/start_at"
            android:textSize="@dimen/text_size_20"
            app:layout_constraintBottom_toBottomOf="@id/date_start_at_edit_text"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/date_start_at_edit_text" />

        <EditText
            android:id="@+id/date_start_at_edit_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:focusable="false"
            app:layout_constraintStart_toEndOf="@id/date_start_at_text"
            app:layout_constraintTop_toBottomOf="@id/pick_date" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/choose_days"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/padding_10"
        android:isScrollContainer="true"
        android:orientation="vertical"
        android:visibility="visible"
        app:layout_constraintBottom_toTopOf="@id/notification_time_picker"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/workout_repetition_variants" />

    <CheckBox
        android:id="@+id/set_notification"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/padding_10"
        android:text="@string/notify_at"
        android:textSize="@dimen/text_size_20"
        app:layout_constraintBottom_toBottomOf="@id/notification_time_picker"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/notification_time_picker" />

    <LinearLayout
        android:id="@+id/notification_time_picker"
        android:layout_width="110dp"
        android:layout_height="40dp"
        android:layout_marginHorizontal="@dimen/padding_10"
        android:background="@drawable/rounded_outline"
        android:orientation="horizontal"
        android:layout_marginBottom="20dp"
        app:layout_constraintBottom_toTopOf="@id/plan_button"
        app:layout_constraintStart_toEndOf="@id/set_notification">

        <Button
            android:id="@+id/decrement"
            android:layout_width="30dp"
            android:layout_height="match_parent"
            android:background="@null"
            android:padding="0dp"
            android:text="@string/minus"
            android:textColor="@color/black"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/display_value"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:background="@drawable/bit_rounded_outline"
            android:gravity="center"
            android:imeOptions="actionDone"
            android:inputType="number"
            android:text="@string/_1"
            android:textColor="@android:color/black" />

        <Button
            android:id="@+id/increment"
            android:layout_width="30dp"
            android:layout_height="match_parent"
            android:background="@null"
            android:padding="0dp"
            android:text="@string/plus"
            android:textColor="@color/black"
            android:textSize="25sp" />
    </LinearLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/minutes_hours_switcher"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="@id/notification_time_picker"
        app:layout_constraintStart_toEndOf="@id/notification_time_picker"
        app:layout_constraintTop_toTopOf="@id/notification_time_picker">

        <TextView
            android:id="@+id/minutes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/padding_5"
            android:text="@string/min"
            android:textColor="@color/black"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:visibility="gone"
            android:id="@+id/hours"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/padding_5"
            android:text="@string/h"
            android:textColor="@color/gray_5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>


    <Button
        android:id="@+id/plan_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/padding_10"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="@dimen/padding_10"
        android:paddingHorizontal="@dimen/padding_10"
        android:text="@string/plan"
        android:background="@drawable/rounded_outline_toggle_active"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />


    <Button
        android:id="@+id/stop_plan_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/padding_10"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="@dimen/padding_10"
        android:paddingHorizontal="@dimen/padding_10"
        android:text="@string/no_thank_you"
        android:background="@drawable/rounded_outline_toggle"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>