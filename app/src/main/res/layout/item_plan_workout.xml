<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/rounded_filled_outline"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >

    <TextView
        android:id="@+id/plan_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:text="Запланируем тренрировку?"
        android:textSize="@dimen/text_size_25"
        android:layout_marginVertical="@dimen/padding_20"
       />

    <TextView
        android:id="@+id/choose_repetition"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/plan_header"
        app:layout_constraintStart_toStartOf="parent"
        android:text="Выберите способ повтора"
        android:textSize="@dimen/text_size_20"
        android:layout_marginTop="30dp"
        android:layout_marginHorizontal="@dimen/padding_10"

        />

    <Spinner
        android:id="@+id/workout_repetition_variants"
        android:layout_width="match_parent"
        android:layout_height="@dimen/padding_40"
        android:background="@android:drawable/btn_dropdown"
        app:layout_constraintTop_toBottomOf="@id/choose_repetition"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginHorizontal="@dimen/padding_20"
        android:layout_marginTop="@dimen/padding_10"
        android:textAlignment="center"
        android:entries="@array/workout_repetition_variants"
        />

<!--    <FrameLayout-->
<!--    android:layout_width="wrap_content"-->
<!--    android:layout_height="wrap_content"-->
<!--    app:layout_constraintTop_toBottomOf="@id/workout_repetition_variants"-->
<!--    app:layout_constraintStart_toStartOf="parent"-->
<!--    -->
<!--    />-->

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/every_n_day"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/workout_repetition_variants"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_margin="@dimen/padding_10"
        android:visibility="invisible"
        >
        <TextView
            android:id="@+id/every_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@id/n_day_input"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="@id/n_day_input"
            android:layout_margin="@dimen/padding_10"
            android:text="Каждый"
            android:textSize="@dimen/text_size_20"
            />
        <EditText
            android:id="@+id/n_day_input"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_outline"
            app:layout_constraintStart_toEndOf="@id/every_text"
            app:layout_constraintTop_toTopOf="parent"
            android:text="2"
            android:paddingVertical="@dimen/padding_10"
            android:paddingHorizontal="30dp"
            android:layout_marginHorizontal="@dimen/padding_10"
            />
        <TextView
            android:id="@+id/day_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@id/n_day_input"
            app:layout_constraintStart_toEndOf="@id/n_day_input"
            app:layout_constraintBottom_toBottomOf="@id/n_day_input"
            android:layout_margin="@dimen/padding_10"
            android:text="день"
            android:textSize="@dimen/text_size_20"
            />

        <CheckBox
            android:id="@+id/every_day_checkbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/n_day_input"
            app:layout_constraintStart_toStartOf="parent"
            android:text="Каждый день"
            android:textSize="@dimen/text_size_20"
            />
        <TextView
            android:id="@+id/start_at_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Начало в "
            app:layout_constraintTop_toTopOf="@id/start_at_edit_text"
            app:layout_constraintBottom_toBottomOf="@id/start_at_edit_text"
            app:layout_constraintStart_toStartOf="parent"
            android:textSize="@dimen/text_size_20"
            />

        <EditText
            android:id="@+id/start_at_edit_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:focusable="false"
            app:layout_constraintStart_toEndOf="@id/start_at_text"
            app:layout_constraintTop_toBottomOf="@id/every_day_checkbox"
            android:text="12:00"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>



    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/one_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/workout_repetition_variants"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_margin="@dimen/padding_10"
        android:visibility="invisible"
        >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/pick_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_outline"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            >
      <TextView
          android:id="@+id/date_text"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:clickable="true"
          app:layout_constraintTop_toTopOf="parent"
          app:layout_constraintStart_toStartOf="parent"
          android:text="25.05.2021"
          android:textSize="@dimen/text_size_20"
          android:paddingHorizontal="@dimen/padding_10"
          android:paddingVertical="@dimen/padding_5"
          />

            <ImageView
                android:id="@+id/calendar_icon"
                android:layout_width="27dp"
                android:layout_height="22dp"
                android:layout_margin="@dimen/padding_10"
                android:src="@drawable/ic_baseline_calendar_today_24"
                app:layout_constraintBottom_toBottomOf="@id/pick_date"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/date_text"
                app:layout_constraintTop_toTopOf="@id/date_text" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <TextView
            android:id="@+id/date_start_at_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Начало в "
            app:layout_constraintTop_toTopOf="@id/date_start_at_edit_text"
            app:layout_constraintBottom_toBottomOf="@id/date_start_at_edit_text"
            app:layout_constraintStart_toStartOf="parent"
            android:textSize="@dimen/text_size_20"
            />

        <EditText
            android:id="@+id/date_start_at_edit_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            app:layout_constraintStart_toEndOf="@id/date_start_at_text"
            app:layout_constraintTop_toBottomOf="@id/pick_date"
            android:text="12:00"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/choose_days"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintTop_toBottomOf="@id/workout_repetition_variants"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_margin="@dimen/padding_10"
            android:visibility="visible"
            />

    <CheckBox
        android:id="@+id/set_notification"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        android:textSize="@dimen/text_size_20"
        android:text="Оповестить за "
        android:layout_marginHorizontal="@dimen/padding_10"
        app:layout_constraintTop_toTopOf="@id/notification_time_picker"
        app:layout_constraintBottom_toBottomOf="@id/notification_time_picker"
        />

    <LinearLayout
        android:id="@+id/notification_time_picker"
        android:layout_width="110dp"
        android:layout_height="40dp"
        android:background="@drawable/rounded_outline"
        android:orientation="horizontal"
        android:layout_marginHorizontal="@dimen/padding_10"
        app:layout_constraintTop_toBottomOf="@id/choose_days"
        app:layout_constraintStart_toEndOf="@id/set_notification"
        >

        <Button
            android:id="@+id/decrement"
            android:layout_width="30dp"
            android:layout_height="match_parent"
            android:padding="0dp"
            android:textColor="@color/black"
            android:background="@null"
            android:textStyle="bold"
            android:text="—"/>

        <EditText
            android:id="@+id/display"
            android:layout_width="50dp"
            android:background="@drawable/bit_rounded_outline"
            android:layout_height="match_parent"
            android:text="1"
            android:textColor="@android:color/black"
            android:focusable="false"
            android:inputType="number"
            android:gravity="center"
            android:imeOptions="actionDone"
            />
        <Button
            android:id="@+id/increment"
            android:layout_width="30dp"
            android:layout_height="match_parent"
            android:padding="0dp"
            android:textSize="25sp"
            android:textColor="@color/black"
            android:background="@null"
            android:text="+"/>
    </LinearLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/minutes_hours_switcher"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="@id/notification_time_picker"
        app:layout_constraintStart_toEndOf="@id/notification_time_picker"
        app:layout_constraintBottom_toBottomOf="@id/notification_time_picker"
        >
        <TextView
            android:id="@+id/minutes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:text="мин."
            android:layout_marginStart="@dimen/padding_5"
            android:textColor="@color/black"
            />
        <TextView
            android:id="@+id/hours"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:text="час."
            android:layout_marginStart="@dimen/padding_5"
            android:textColor="@color/gray_5"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>



    <Button
        android:id="@+id/plan_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/notification_time_picker"
        android:layout_marginHorizontal="@dimen/padding_10"
        android:layout_marginBottom="@dimen/padding_10"
        android:layout_marginTop="30dp"
        android:paddingHorizontal="@dimen/padding_10"
        android:text="Запланировать!"
        />
</androidx.constraintlayout.widget.ConstraintLayout>